# Production Environment Configuration for Azure Deployment
# Copy this file to .env and update with your production values

# === DATABASE CONFIGURATION ===
# Azure Database for PostgreSQL Flexible Server
DATABASE_URL=postgresql://{username}:{password}@{server}.postgres.database.azure.com:5432/{database}?sslmode=require
DB_HOST={your-postgres-server}.postgres.database.azure.com
DB_PORT=5432
DB_USER={your-postgres-user}
DB_PASSWORD={your-strong-password}
DB_NAME={your-database-name}

# === REDSYS PAYMENT CONFIGURATION ===
# Production Redsys settings (replace with your actual values)
REDSYS_SECRET_KEY={your-production-redsys-secret-key}
REDSYS_MERCHANT_CODE={your-production-merchant-code}
REDSYS_TERMINAL=001
REDSYS_SANDBOX=false
REDSYS_MERCHANT_URL=https://{your-app-name}.azurewebsites.net/api/v1/payments/callback
REDSYS_MERCHANT_NAME=Total Keepers

# === APPLICATION CONFIGURATION ===
SECRET_KEY={your-production-secret-key-min-32-chars}
DEBUG=false
ENVIRONMENT=production

# === JWT AUTHENTICATION ===
JWT_SECRET_KEY={your-production-jwt-secret-key-min-32-chars}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# === CORS SETTINGS ===
ALLOWED_ORIGINS=["https://{your-frontend-domain}.com","https://{your-app-name}.azurewebsites.net"]

# === EMAIL CONFIGURATION (if using email features) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER={your-email@gmail.com}
# SMTP_PASSWORD={your-app-password}
# FROM_EMAIL={your-email@gmail.com}

# === AZURE SPECIFIC SETTINGS ===
# These will be automatically set by Azure App Service
# WEBSITE_HOSTNAME={your-app-name}.azurewebsites.net
# WEBSITE_SITE_NAME={your-app-name}
